<?xml version='1.0' encoding='utf-8'?>
<widget id="org.scriptwriter.wentonative" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>need camera access to take pictures</string>
    </edit-config>
    <name>WebToNative</name>
    <description>
        Advanced iOS WebView Application
    </description>
    <author email="" href="">
        Script Writer
    </author>
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="MediaTypesRequiringUserActionForPlayback" value="all" />
    <preference name="SuppressesLongPressGesture" value="true" />
    <preference name="Suppresses3DTouchGesture" value="true" />
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="Fullscreen" value="true" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="Allow3DTouchLinkPreview" value="false" />
    <preference name="AudioCanMix" value="true" />
    <preference name="AllowsAirPlayForMediaPlayback" value="true" />
    <preference name="AllowBackForwardNavigationGestures" value="true" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="AllowNewWindows" value="false" />
    <preference name="BackgroundColor" value="#fffff" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />
    <preference name="CameraUsesGeolocation" value="false" />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="black" />
    <feature name="OneSignalPush">
        <param name="android-package" value="com.onesignal.cordova.OneSignalPush" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false"/>
    </feature>
    <platform name="android">
    <!-- <splash src="../drawable-port-hdpi/screen.jpg" density="land-hdpi" />
    <splash src="res/screen/android/splash-land-ldpi.png" density="land-ldpi" />
    <splash src="res/screen/android/splash-land-mdpi.png" density="land-mdpi" />
    <splash src="res/screen/android/splash-land-xhdpi.png" density="land-xhdpi" /> -->
    <!-- <splash src="res/screen/android/splash-land-xxhdpi.png" density="land-xxhdpi" />
    <splash src="res/screen/android/splash-land-xxxhdpi.png" density="land-xxxhdpi" /> -->

    <splash src="../drawable-port-hdpi/screen.jpg" density="port-hdpi" />
    <splash src="../drawable-port-ldpi/screen.jpg" density="port-ldpi" />
    <splash src="../drawable-port-mdpi/screen.jpg" density="port-mdpi" />
    <splash src="../drawable-port-xhdpi/screen.jpg" density="port-xhdpi" />
    <splash src="../drawable-land-xxhdpi/screen.png" density="port-xxhdpi" />
    <splash src="../drawable-port-xxxhdpi/screen.jpg" density="port-xxxhdpi" /> 
</platform>
</widget>
